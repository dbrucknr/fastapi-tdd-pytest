{
    "[python]": {
        // Automatically format the code when saving a file
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            // Perform all available fixes on save
            "source.fixAll": "explicit",
            // Organize imports on save
            "source.organizeImports": "explicit"
        },
        // Set the default formatter to ruff, assuming it is installed
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    // Display a vertical rule at column 88 to help maintain PEP 8 compliance
    "editor.rulers": [88],
}